    <script>
        // Theme Toggle
        const themeToggle = document.getElementById('themeToggle');
        const body = document.body;
        
        themeToggle.addEventListener('click', () => {
            body.classList.toggle('light-mode');
            if (body.classList.contains('light-mode')) {
                themeToggle.textContent = 'Light Mode';
            } else {
                themeToggle.textContent = 'Dark Mode';
            }
            playSound('click');
        });
        
        // Sound Effects
        const sounds = {
            click: new Howl({ src: ['https://assets.mixkit.co/sfx/preview/mixkit-select-click-1109.mp3'] }),
            hover: new Howl({ src: ['https://assets.mixkit.co/sfx/preview/mixkit-hard-typewriter-click-1115.mp3'] })
        };
        
        function playSound(soundName) {
            sounds[soundName].play();
        }
        
        // Add hover sound to all buttons and links
        const interactiveElements = document.querySelectorAll('a, button, .nav-links li, .project-card, .social-link');
        interactiveElements.forEach(element => {
            element.addEventListener('mouseenter', () => {
                playSound('hover');
            });
            
            element.addEventListener('click', (e) => {
                if (e.target.tagName === 'A' || e.target.tagName === 'BUTTON') {
                    playSound('click');
                }
            });
        });
        
        // Animate skill bars on scroll
        const skillBars = document.querySelectorAll('.skill-progress');
        
        function animateSkillBars() {
            skillBars.forEach(bar => {
                const width = bar.getAttribute('data-width');
                bar.style.width = width;
            });
        }
        
        // Initialize animations when page loads
        window.addEventListener('load', () => {
            animateSkillBars();
            
            // Typewriter effect
            const typewriter = document.querySelector('.typewriter');
            typewriter.style.animation = 'none';
            setTimeout(() => {
                typewriter.style.animation = null;
            }, 10);
            
            // Create hexagon background
            createHexagonBackground();
        });
        
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 100,
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        // Explore button scroll to about section
        document.getElementById('exploreBtn').addEventListener('click', () => {
            document.getElementById('about').scrollIntoView({ behavior: 'smooth' });
        });
        
        // Form submission
        document.getElementById('contactForm').addEventListener('submit', (e) => {
            e.preventDefault();
            alert('Thank you for your message! I will get back to you soon.');
            e.target.reset();
        });
        
        // Matrix Rain Effect
        const matrixCanvas = document.getElementById('matrixRain');
        if (matrixCanvas) {
            const ctx = matrixCanvas.getContext('2d');
            
            matrixCanvas.width = window.innerWidth;
            matrixCanvas.height = window.innerHeight;
            
            const letters = '01010101010101010101010101010101';
            const fontSize = 14;
            const columns = matrixCanvas.width / fontSize;
            
            const drops = [];
            for (let i = 0; i < columns; i++) {
                drops[i] = 1;
            }
            
            function drawMatrix() {
                ctx.fillStyle = 'rgba(10, 10, 18, 0.05)';
                ctx.fillRect(0, 0, matrixCanvas.width, matrixCanvas.height);
                
                ctx.fillStyle = '#0cf';
                ctx.font = `${fontSize}px monospace`;
                
                for (let i = 0; i < drops.length; i++) {
                    const text = letters[Math.floor(Math.random() * letters.length)];
                    ctx.fillText(text, i * fontSize, drops[i] * fontSize);
                    
                    if (drops[i] * fontSize > matrixCanvas.height && Math.random() > 0.975) {
                        drops[i] = 0;
                    }
                    
                    drops[i]++;
                }
            }
            
            setInterval(drawMatrix, 33);
        }
        
        // Hexagon Background
        function createHexagonBackground() {
            const container = document.getElementById('hexagonContainer');
            if (!container) return;
            
            const hexagonCount = 20;
            for (let i = 0; i < hexagonCount; i++) {
                const hexagon = document.createElement('div');
                hexagon.classList.add('hexagon');
                
                // Random position
                const left = Math.random() * 100;
                const top = Math.random() * 100;
                
                hexagon.style.left = `${left}%`;
                hexagon.style.top = `${top}%`;
                
                // Random animation
                const duration = 20 + Math.random() * 30;
                hexagon.style.animation = `pulse ${duration}s infinite`;
                
                container.appendChild(hexagon);
            }
        }
        
        // Update canvas size on window resize
        window.addEventListener('resize', () => {
            if (matrixCanvas) {
                matrixCanvas.width = window.innerWidth;
                matrixCanvas.height = window.innerHeight;
            }
        });
    </script>
</body>
</html>
